---
import Layout from "../layouts/Layout.astro";
import Directory from "../components/MachineDirectory.astro";
import { Carousel } from "../components/Carousel.jsx";
import { slides6 } from "../data/carouselData.json";
---

<Layout title="Racking | Gerrard Group Inc" 
    description="Racking"
    title2="Racking | Gerrard Group Inc" 
    url="https://gerrardgroupinc.netlify.app/rackingDetails/" 
    name="Racking | Gerrard Group Inc" 
    url2="https://gerrardgroupinc.netlify.app/rackingDetails/" 
    title3="Racking | Gerrard Group Inc"
    url3="https://gerrardgroupinc.netlify.app/rackingDetails/"
    canon="https://gerrardgroupinc.netlify.app/rackingDetails/">
    <Directory 
        title="Racking"
        page="Racking"
        page2="Machine Details"
        href="/liquidations"
    />
    <main class="page-container">
        <section class="machine-details">
            <Carousel client:load
                data={slides6}
            />
        </section>
    </main>
</Layout>

<style is:inline>
    .page-container {
        display: flex;
        justify-content: center;
        margin-block: 5rem;
    }

    .machine-details {
        user-select: none;
    }

    @media (max-width: 40rem) {
        .carousel {
		    width: 300px;
		    height: 250px;
	    }
    }
</style>