---
import Layout from "../layouts/Layout.astro";
import Directory from "../components/MachineDirectory.astro";
import { Carousel } from "../components/Carousel.jsx";
import { slides6 } from "../data/carouselData.json";
---

<Layout title="Racking | Gerrard Group Inc" 
    description="Racking that will soon be available for purchasing."
    canon="https://gerrardgroupinc.com/rackingdetails/"
    >
    <Directory 
        title="Racking"
        page="Racking"
        page2="Machine Details"
        href="/liquidations"
    />
    <main class="page-container">
        <section class="machine-details">
            <Carousel client:load
                data={slides6}
            />
        </section>
    </main>
</Layout>

<style is:inline>
    .page-container {
        display: flex;
        justify-content: center;
        margin-block: 5rem;
    }

    .machine-details {
        user-select: none;
    }

    @media (max-width: 40rem) {
        .carousel {
		    width: 300px;
		    height: 250px;
	    }

        .arrow-left {
            left: -1rem;
        }

        .arrow-right {
            right: -1rem;
        }
    }
</style>