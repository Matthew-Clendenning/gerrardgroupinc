---
import Layout from "../layouts/Layout.astro";
import Directory from "../components/MachineDirectory.astro";
import { Carousel } from "../components/Carousel.jsx";
import { slides9 } from "../data/carouselData.json";
---

<Layout
    title="Atlas Copco XRVS 1550 CD7 Portable Air Compressor | Gerrard Group Inc"
    description="Atlas Copco, Model XRVS 1550 CD7, High Pressure, Diesel, Portable Air Compressor– New 2016 (Only 1415 Hours). Equipped with Cat Diesel Engine, After Cooler, Water Separator, Electric Block Heater."
    canon="https://gerrardgroupinc.com/atlas-copco-air-compressor-1550CD7/"
    >
    <Directory 
        title="Atlas Copco XRVS 1550 CD7 Portable Air Compressor"
        page=""
        page2="Machine Details"
        href="/liquidations"
    />
    <main class="page-container">
        <section class="machine-details">
            <Carousel client:load
                data={slides9}
            />
            <article class="machine">
				<h2>Atlas Copco, Model XRVS 1550 CD7, High Pressure, Diesel, Portable Air Compressor– New 2016 (Only 1415 Hours)</h2>
				<p>Model: <strong>XRVS 1550 CD7 T2 TANDEM EB AFT</strong></p>
				<hr>
                <div class="machine-info-container">
                    <div class="details">
                        <div class="carousel-info">Capacity:<span>1544cfm @ 363psi (Norm.)<br>1350cfm @ 506psi (Max.)</span></div>
                        <div class="carousel-info">Fuel Capacity:<span>240 Gallon</span></div>
                        <div class="carousel-info">Frame:<span>Tandem Axle with Electric Brakes</span></div>
                        <div class="carousel-info">Equipped With:<span>Cat Diesel Engine, After Cooler, Water<br>Separator, Electric Block Heater</span></div>
                        <div class="carousel-info">Weight Approx.:<span>GVWR (kg): 8095<br>GAWR (kg): 9070</span></div>
                    </div>
                </div>
            </article>
        </section>
    </main>
</Layout>

<style is:inline>
    .page-container {
        padding-inline: 2rem;
    }

    .machine-details {
        display: flex;
        justify-content: space-evenly;
        align-items: stretch;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -o-user-select: none;
        user-select: none;
        user-select: none;
        margin: 5rem 0;
        padding: 1rem;
        gap: 0rem;
        box-shadow: 0 0 10px 0px rgba(0, 0, 0, .5), 0 4px 6px -4px rgba(0, 0, 0, .5);
	    border-radius: 10px;
    }

    .machine {
        width: 50%;
        box-shadow: 0 0 5px 0px rgba(0, 0, 0, .5), 0 4px 6px -4px rgba(0, 0, 0, .5);
        border-radius: 10px;
        padding: 1rem;
    }

    .machine h2 {
        font-size: clamp(.5rem, 3vh, 3rem);
        margin: 0;
        color: #425abd;
    }

    .machine p {
	    font-size: clamp(.5rem, 1.7vh, 3rem);
        margin: 1em 0;
    }

    .machine-info-container {
	    margin-top: 3rem;
    }

    .details {
	    display: grid;
	    align-items: flex-start;
	    gap: 1rem;
    }

    .carousel-info {
        display: flex;
        justify-content: space-between;
        font-size: clamp(.5rem, 2vh, 3rem);
        margin: 0;
        color: #425abd;
        font-weight: bold;
    }

    .details span {
        display: grid;
        justify-content: flex-start;
        color: black;
        font-size: clamp(.5rem, 2vh, 3rem);
        margin: 0;
    }

    .padding {
        display: grid;
        gap: .5rem;
        justify-items: end;
    }

    .controls {
	    width: 60%;
    }

    @media (max-width: 40rem) {
        .page-container {
            padding-inline: .5rem;
        }

        .machine-info-container {
            margin-top: 1rem;
        }

        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .carousel {
            width: 100%;
		    height: 250px;
	    }

        .arrow-left {
            left: -1rem;
        }

        .arrow-right {
            right: -1rem;
        }

        .machine {
		    width: auto;
        }
        
        .machine h2 {
            font-size: clamp(.5rem, 2.5vh, 3rem);
        }
        
        .details {
            gap: 1rem;
        }
        
        .carousel-info {
            display: grid;
            justify-content: flex-start;
        }
        
        .padding {
            justify-items: start;
            gap: 1rem;
        }
    }

    @media (min-width: 40rem) and (max-width: 60rem) {
        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .machine {
            width: auto;
        }

        .carousel {
            width: 100%;
		    height: 400px;
	    }
    }

    @media (min-width: 60rem) and (max-width: 70rem) {
        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .machine {
            width: auto;
        }

        .carousel {
		    height: 400px;
	    }
    }

    @media only screen and (orientation: landscape) and (min-width: 40rem) and (max-width: 60rem) {
        .directory-title {
            font-size: clamp(.5rem, 3vh, 3rem);
        }

        .page-title {
            font-size: clamp(1rem, 6vh, 3rem);
        }
        
        .carousel {
            height: 350px;
        }

        .arrow-left {
            left: -1rem;
        }

        .arrow-right {
            right: -1rem;
        }

        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .machine {
            width: auto;
        }

        .machine h2 {
            font-size: clamp(1rem, 4vh, 3rem);
        }

        .machine p {
            font-size: clamp(.5rem, 3vh, 3rem);
        }

        .carousel-info {
            font-size: clamp(1rem, 3vh, 3rem);
        }

        .details span {
            font-size: clamp(1rem, 3vh, 3rem);
        }
    }
</style>