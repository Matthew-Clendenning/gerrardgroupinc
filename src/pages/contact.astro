<style is:inline>
    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: stretch;
        gap: 3rem;
    }

    .one {
        opacity: 0;
        transform: translateY(4rem);
	    animation: fadeInUp 1.3s ease-in-out 2s forwards;
    }

    .two {
        opacity: 0;
        transform: translateY(4rem);
	    animation: fadeInUp 1.3s ease-in-out 2.3s forwards;
    }

    .three {
        opacity: 0;
        transform: translateY(4rem);
	    animation: fadeInUp 1.3s ease-in-out 2.6s forwards;
    }

    .four {
        opacity: 0;
        transform: translateY(4rem);
	    animation: fadeInUp 1.3s ease-in-out 2.9s forwards;
    }

    .four img {
        box-shadow: none;
        filter: drop-shadow(0 0 30px hsl(0, 0%, 20%));
    }

    .five {
        opacity: 0;
        transform: translateY(4rem);
	    animation: fadeInUp 1.3s ease-in-out 3.2s forwards;
    }

    .five img {
        box-shadow: none;
        filter: drop-shadow(0 0 30px hsl(0, 0%, 20%));
    }

    @keyframes fadeInUp {
	    to {
	        opacity: 100%; 
	        transform: translateY(0); 
	    }
    }

    .page-container {
        display: grid;
        justify-items: center;
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    .link-text {
        pointer-events: none;
        text-decoration: none;
    }

    .card-email span, .card-phone span {
        color: hsl(216, 53%, 84%);
    }

    @media (max-width: 40rem) {
        .one {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .two {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .three {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .four {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .five {
            opacity: 1;
            transform: none;
            animation: none;
        }
    }

    @media only screen and (orientation: landscape) and (min-width: 40rem) and (max-width: 60rem) {
        .one {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .two {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .three {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .four {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .five {
            opacity: 1;
            transform: none;
            animation: none;
        }
    }

    @media (prefers-reduced-motion: no preference) {
        * {
            animation-duration: .01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: .01ms !important;
            scroll-behavior: auto !important;
        }
    }
</style>

<script async type="text/javascript" defer="defer" is:inline>
    const typedTextSpan = document.querySelector(".title-text");
    const cursor = document.querySelector(".cursor");
    const textArray = ["Contact Gerrard Machinery"];
    const typingDelay = 70;

    let textArrayIndex = 0;
    let charIndex = 0;
    
    function type() {
        if(charIndex < textArray[textArrayIndex].length) {
            if(!cursor.classList.contains("typing")) cursor.classList.add("typing");
            typedTextSpan.textContent += textArray[textArrayIndex].charAt(charIndex);
            charIndex++
            setTimeout(type, typingDelay);
            }
            else {
                cursor.classList.remove("typing");
        }
    }
    
    document.addEventListener("DOMContentLoaded", function() {
        if(textArray.length) setTimeout(type, typingDelay + 250);
    });
</script>