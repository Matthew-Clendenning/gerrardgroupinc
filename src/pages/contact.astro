---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import dan from '../assets/dan.jpg';
import mike from '../assets/mike copy1.jpg';
import sara from '../assets/sara-copy1.jpg';
import placeHolder from '../assets/placeholder-person-square.png';
---

<Layout title="Contact | Gerrard Group Inc" 
    description="The Gerrard Machinery Company will buy or sell your used machinery. Contact us today with any questions you may have."
    canon="https://gerrardgroupinc.com/contact/"
    >
    <main class="page-container">
        <h1 class="title"><span class="title-text">Contact Us</span></h1><!--<span class="cursor">&nbsp;</span>-->
        <article class="cards">
            <Card 
                title="Daniel Gerrard"
                name="Daniel Gerrard"
                body="President & CEO"
                email="Gerrardmachinery@gmail.com"
                phone="847-894-3434"
                btnName="Contact"
                imageURL={dan}
                alt="dan gerrard"
                href="mailto:Gerrardmachinery@gmail.com"
                loading="eager"
            />
            <Card 
                title="Sara Vera"
                name="Sara Vera"
                body="Vice President - Mexico/South America"
                email="Sara.Gerrardmachinery@gmail.com"
                phone="847-322-0431"
                btnName="CONTACT"
                imageURL={sara}
                alt="sara gerrard"
                href="mailto:Sara.Gerrardmachinery@gmail.com"
                loading="eager"
            />
            <div class="shadow-fix">
                <Card 
                    title="Jamie Gumpel"
                    name="Jamie Gumpel"
                    body="Vice President - Healthcare/Medical"
                    email="Gerrardmachinery@gmail.com"
                    phone="713-298-9050"
                    btnName="CONTACT"
                    imageURL={placeHolder}
                    alt="jamie gumpel"
                    href="mailto:Gerrardmachinery@gmail.com"
                    loading="eager"
                />
            </div>
            <div class="shadow-fix">
                <Card 
                    title="Matthew Clendenning"
                    name="Matthew Clendenning"
                    body="Vice President - Web Development"
                    email="Matthewclendenning@outlook.com"
                    phone="312-522-8606"
                    btnName="CONTACT"
                    imageURL={placeHolder}
                    alt="matthew clendenning"
                    href="mailto:Matthewclendenning@outlook.com"
                    loading="eager"
                />
            </div>
        </article>
    </main>
</Layout>

<style is:inline>
    .cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: stretch;
        gap: 3rem;
    }

    .shadow-fix img {
        box-shadow: none;
    }

    .page-container {
        display: grid;
        justify-items: center;
        margin-top: 3rem;
        margin-bottom: 3rem;
    }

    .link-text {
        pointer-events: none;
        text-decoration: none;
    }
</style>

