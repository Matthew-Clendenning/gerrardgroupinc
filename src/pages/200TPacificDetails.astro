---
import Layout from "../layouts/Layout.astro";
import Directory from "../components/MachineDirectory.astro";
import { Carousel } from "../components/Carousel.jsx";
import { slides } from "../data/carouselData.json";
---

<Layout title="200 Ton Pacific Model - 8378 - Gerrard Group Inc" 
    description="" 
    title2="200 Ton Pacific Model - 8378 - Gerrard Group Inc" 
    url="https://www.gerrardgroupinc.com/liquidationssurplus/200tonpacificmodel" 
    name="200 Ton Pacific Model - 8378 - Gerrard Group Inc" 
    url2="https://www.gerrardgroupinc.com/liquidationssurplus/200tonpacificmodel" 
    title3="200 Ton Pacific Model - 8378 - Gerrard Group Inc"
    url3="https://www.gerrardgroupinc.com/liquidationssurplus/200tonpacificmodel"
    canon="https://www.gerrardgroupinc.com/liquidationssurplus/200tonpacificmodel">
    <Directory 
        title="200 Ton Pacific Model"
        page="Hydraulic Presses"
        page2="Machine Details"
        href="/liquidations"
    />
    <main class="page-container">
        <section class="machine-details">
            <Carousel client:load
                data={slides}
            />
            <section class="machine-title">
				<h2>200 Ton Pacific Model 200-D-10-36 Downstroke Self Contained Hydraulic Press – New 1978
                    Housing Type – Gib Guided - Dual Cylinder –“T-Slotted” Bed and Slide</h2>
				<p>Serial No.: <strong>8380 (1978)</strong></p>
				<hr>
			<div class="machine-info-container">
				<div class="details">
					<div class="carousel-info">Bed Area (Nominal):<span>123” L-R x 36” F-B (T-Slotted F-B)</span></div>
					<div class="carousel-info">Slide Area (Nominal):<span>123” L-R x 36” F-B (T-Slotted F-B)</span></div>
					<div class="carousel-info">Distance Between Housings:<span>" L-R</span></div>
					<div class="carousel-info">Stroke of Gib Guided Slide:<span>0" - 18" Max.</span></div>
					<div class="carousel-info">Daylight Opening:<span>30" Max.</span></div>
					<div class="carousel-info">Max. Upper Die Weight:<span>10,000 lbs.</span></div>
					<div class="carousel-info">Speeds Approx.:<span>187 IPM Fast Closing</span></div>
					<div class="padding">
						<div class="carousel-info"><span>89 IPM Slow Close</span></div>
						<div class="carousel-info"><span>34 IPM Pressing</span></div>
						<div class="carousel-info"><span>70 IPM Slow Return</span></div>
						<div class="carousel-info"><span>176 IPM Fast Return</span></div>
					</div>
					<div class="carousel-info">Power Unit (Top Rear):<span>30 HP 460/3/60 Motor Driving Hydraulic Unit.</span></div>
					<div class="carousel-info">Weight Approx.:<span>43,000 lbs.</span></div>
					<div class="carousel-info">Physical Dimension Approx.:<span>13' L-R x 5' F-B x 26' H</span></div>
					<div class="carousel-info">Controls:<span class="controls">Push Button Operation with Stroke, Pressure and 
					Speed Control. Allen Bradley PLC Added in 2000. Light Curtains.</span></div>
                </div>
            </div>
            </section>
        </section>
    </main>
</Layout>

<style>
    .page-container {
        padding-inline: 2rem;
    }

    .machine-details {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        user-select: none;
        margin: 5rem 0;
        padding: 1rem;
        gap: 0rem;
        box-shadow: 1px 1px 10px black;
	    border-radius: 10px;
    }

    .machine-title {
        width: 50%;
        box-shadow: 1px 1px 10px black;
        border-radius: 10px;
        padding: 1rem;
    }

    .machine-title h2 {
        font-size: clamp(.5rem, 3vh, 3rem);
        margin: 0;
        color: #425abd;
    }

    .machine-title p {
	    font-size: clamp(.5rem, 2vh, 3rem);
        margin: 1em 0;
    }

    .machine-info-container {
    	display: flex;
    	align-items: flex-start;
    	justify-content: space-between;
    	gap: 3rem;
	    margin-top: 2rem;
    }

    .details {
	    display: grid;
	    align-items: flex-start;
	    gap: .5rem;
    }

    .carousel-info {
        display: flex;
        justify-content: space-between;
        font-size: clamp(.5rem, 2vh, 3rem);
        margin: 0;
        color: #425abd;
    }

    .details span {
        display: grid;
        justify-content: flex-start;
        color: black;
        font-size: clamp(.5rem, 2vh, 3rem);
        margin: 0;
    }

    .padding {
        display: grid;
        gap: .5rem;
        justify-items: end;
    }

    .controls {
	    width: 60%;
    }

    @media (max-width: 40rem) {
        .page-container {
            padding-inline: .5rem;
        }

        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .carousel {
		    width: 95%;
		    height: 250px;
	    }

        .arrow-left {
            left: -1rem;
        }

        .arrow-right {
            right: -1rem;
        }

        .machine-title {
		    width: auto;
        }
        
        .machine-title h2 {
            font-size: clamp(.5rem, 2.5vh, 3rem);
        }
        
        .details {
            gap: 1rem;
        }
        
        .carousel-info {
            display: grid;
            justify-content: flex-start;
        }
        
        .padding {
            justify-items: start;
            gap: 1rem;
        }
    }

    @media (min-width: 40rem) and (max-width: 60rem) {
        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .machine-title {
            width: auto;
        }

        .carousel {
		    width: 70%;
		    height: 400px;
	    }
    }

    @media (min-width: 60rem) and (max-width: 70rem) {
        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .machine-title {
            width: auto;
        }

        .carousel {
		    width: 70%;
		    height: 400px;
	    }
    }

    @media only screen and (orientation: landscape) and (min-width: 40rem) and (max-width: 60rem) {
        .directory-title {
            font-size: clamp(.5rem, 3vh, 3rem);
        }

        .page-title {
            font-size: clamp(1rem, 6vh, 3rem);
        }
        
        .carousel {
            width: 65%;
            height: 350px;
        }

        .arrow-left {
            left: -1rem;
        }

        .arrow-right {
            right: -1rem;
        }

        .machine-details {
            flex-direction: column;
            gap: 1rem;
        }

        .machine-title {
            width: auto;
        }

        .machine-title h2 {
            font-size: clamp(1rem, 4vh, 3rem);
        }

        .machine-title p {
            font-size: clamp(.5rem, 3vh, 3rem);
        }

        .carousel-info {
            font-size: clamp(1rem, 3vh, 3rem);
        }

        .details span {
            font-size: clamp(1rem, 3vh, 3rem);
        }
    }
</style>