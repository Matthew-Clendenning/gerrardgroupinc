---
import Layout from "../layouts/Layout.astro";
import Directory from "../components/MachineDirectory.astro";
import { Carousel } from "../components/Carousel.jsx";
import { slides5 } from "../data/carouselData.json";
---

<Layout title="Pallet Jack | Gerrard Group Inc" 
    description="Pallet Jack"
    title2="Pallet Jack | Gerrard Group Inc" 
    url="https://gerrardgroupinc.netlify.app/palletJackDetails/" 
    name="Pallet Jack | Gerrard Group Inc" 
    url2="https://gerrardgroupinc.netlify.app/palletJackDetails/" 
    title3="Pallet Jack | Gerrard Group Inc"
    url3="https://gerrardgroupinc.netlify.app/palletJackDetails/"
    canon="https://gerrardgroupinc.netlify.app/palletJackDetails/">
    <Directory 
        title="Pallet Jack"
        page="Jacks"
        page2="Machine Details"
        href="/liquidations"
    />
    <main class="page-container">
        <section class="machine-details">
            <Carousel client:load
                data={slides5}
            />
        </section>
    </main>
</Layout>

<style is:inline>
    .page-container {
        display: flex;
        justify-content: center;
        margin-block: 5rem;
    }

    .machine-details {
        user-select: none;
    }

    @media (max-width: 40rem) {
        .carousel {
		    width: 300px;
		    height: 250px;
	    }
    }
</style>