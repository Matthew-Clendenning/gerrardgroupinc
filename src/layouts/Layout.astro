---
import '../styles/global.css'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
    title: string;
	description?: string;
	title2: string;
	url: string;
	name: string;
	url2: string;
	title3: string;
	url3: string;
}

const { title, description, title2, url, name, url2, title3, url3 } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Rokkitt&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">
		<title>{title}</title>
		<link rel="icon" type="image/png" href="../images/danny's logo.png">
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content={description} />
		<meta property="og:site_name" content="Gerrard Group Inc">
		<meta property="og:title" content={title2}>
		<meta property="og:url" content={url}>
		<meta property="og:type" content="website">
		<meta itemprop="name" content={name}>
		<meta itemprop="url" content={url2}>
		<meta name="twitter:title" content={title3}>
		<meta name="twitter:url" content={url3}>
		<meta name="twitter:card" content="summary">
		<script src="../scripts/BTT.js"></script>
		<script src="https://kit.fontawesome.com/e163b7e8b4.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
    </body>
</html>